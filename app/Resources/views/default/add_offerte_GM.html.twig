{% extends 'template/base.html.twig' %}
{% block body %}
    <div class="features-boxed">
        <div class="container">
            <div class="col">
                <form action="{{ path('GenerateOfferte',{'shop': shop}) }}" method="post">
                    <input type="hidden" name="customerID" value="{{ customerID }}">
                    <div class="col-lg-12">
                            <div class="form-group"><label>Titel :</label><input name="titel" class="form-control"
                                                                             type="text"></div>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group"><label>Leveradres :</label><input name="leveradres" class="form-control"
                                                                                  type="text"></div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group"><label>Postcode :</label><input name="postcode" class="form-control"
                                                                                type="number"></div>
                    </div>
                    <div class="form-group col-lg-12"><label>Lever datum :</label><input name="leverdatum" class="form-control"
                                                                                         type="date">
                    </div>
                    <hr>
                   <div class="col-lg-12">
                       <div class="form-group">
                           <label for="parameters">Omschrijving:</label>
                           <pre><textarea class="form-control textarea" rows="5" id="parameters" name="parameters"></textarea></pre>
                       </div>
                   </div>
                    <div class="col-lg-2">
                        <div class="form-group"><label>Subtotaal :</label><input name="subtotaal" class="form-control"
                                                                                  type="number"></div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group"><label>Korting (%) :</label><input name="korting" class="form-control"
                                                                                  type="number"></div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group"><label>Totaal :</label><input disabled="disabled" name="totaal" class="form-control"
                                                                                   type="number"></div>
                    </div>
                    <div class="col-xs-12">
                        <button type="button" class="btn btn-success">Bereken totaal</button>
                        <button  class="btn btn-primary" type="submit">offerte Toevoegen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
